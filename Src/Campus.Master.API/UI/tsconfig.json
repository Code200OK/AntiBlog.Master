{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@shared-models/*": ["app/models/*"],
      "@services/*": ["app/services/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "reflect-metadata",
      "jest",
      "node"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableIvy": false
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "./src/**/*.tsx",
    "**/*.spec.ts"
  ]
}
